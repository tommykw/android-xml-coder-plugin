<idea-plugin version="2">
    <id>com.github.tommykw.android-xml-coder-plugin</id>
    <name>Android XML Coder Plugin</name>
    <version>0.0.1</version>
    <vendor email="destinys.lotus.1108mn@gmail.com" url="https://github.com/tommykw/android-xml-coder-plugin">Android XML Coder Plugin</vendor>

    <description><![CDATA[
      This plugin help you to edit xml in your Android project.
    ]]></description>

    <change-notes><![CDATA[
      0.0.1: Initial release.<br>
    ]]>
    </change-notes>

    <idea-version since-build="131"/>

    <application-components>
    </application-components>

    <project-components>
    </project-components>

    <actions>
    </actions>

    <!-- please see https://confluence.jetbrains.com/display/IDEADEV/Plugin+Compatibility+with+IntelliJ+Platform+Products
         on how to target different products -->
    <depends>org.jetbrains.kotlin</depends>

    <extensions defaultExtensionNs="com.intellij">
        <intentionAction>
            <className>RemoveTagIntention</className>
            <category>Kotlin</category>
        </intentionAction>
        <intentionAction>
            <className>ReplaceHardcodeToResourceIntention</className>
            <category>Android</category>
        </intentionAction>
        <intentionAction>
            <className>ConvertToSimpleConstructor</className>
            <category>Kotlin</category>
        </intentionAction>
        <intentionAction>
            <className>RemoveSemicolonsIntention</className>
            <category>Kotlin</category>
        </intentionAction>
        <intentionAction>
            <className>ResourceOptimizerIntention</className>
            <category>Kotlin</category>
        </intentionAction>
    </extensions>
</idea-plugin>